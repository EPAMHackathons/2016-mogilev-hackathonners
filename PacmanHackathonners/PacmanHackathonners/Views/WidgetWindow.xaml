<Window x:Class="PacmanHackathonners.Views.WidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacmanHackathonners.Views"
        mc:Ignorable="d"
				
        Width="240" Height="100" ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="Manual" Background="Transparent">

	<Grid Margin="5" Background="White" MouseLeftButtonDown="MouseLeftButtonDown">
			<Grid.Effect>
				<DropShadowEffect RenderingBias="Quality" Color="Black" ShadowDepth="0"  Opacity="0.5"/>
			</Grid.Effect>

		<Grid>
			<Button Content="Go" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" Width="70" Command="{Binding StartClick}"/>
		</Grid>
			
	</Grid>
	
</Window>
